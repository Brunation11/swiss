<div class="static-width">
  <div class="col-12">

    <div class="row center">
      <div class="user-dash-nav-tab col-1">
        <%= image_tag("refresh-icon.png", class: "tab-icon") %>
      </div>
      <div class="user-dash-nav-tab user-dash-nav-tab-text col-1">
        <%= link_to "new", new_user_bookmark_path, class: "link white" %>
      </div>
      <div class="user-dash-nav-tab user-dash-nav-tab-text white col-1">
        categorize
      </div>
      <div class="user-dash-nav-tab user-dash-nav-tab-text white col-1">
        categorize
      </div>
    </div>

    <div class="row">

      <div class="col-3 user-dash-column-1 user-dash-column">
        <div class="user-profile">
          <h1><%= current_user.first_name %> <%=current_user.last_name%></h1>
          <ul class="no-list-style">
            <li>Username: <%= current_user.username %></li>
            <li>Email: <%= current_user.email %></li>
            <li>Current Folders: <%= current_user.folders.count %></li>
            <li>Current Bookmarks: <%= current_user.bookmarks.count %></li>
          </ul>
        </div>

        <div class="user-profile-folders">
          <ul class="no-list-style">
            test
            <% @user_folders.each do |folder| %>
              <li class="inline"><% folder %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="col-5 user-dash-column-2 user-dash-column">
        <ul class="no-list-style">
          <%@user_bookmarks.each do |resource|%>
            <div class="bookmark">
              <li><%=link_to resource.name, resource.bookmark.url%></li>
              <li class="inline"><%=link_to "edit", edit_user_bookmark_path(resource)%></li>
              <li class="inline"><%=link_to "delete", user_bookmark_path(resource), method:"delete"%></li>
              <li>
                <ul>
                  <%resource.categories.each do |tag|%>
                    <li><%=tag.name%></li>
                  <%end%>
                </ul>
              </li>
            </div>
          <%end%>
        </ul>
      </div>

    </div>

  </div>
</div>
